
<h1> Add a New Product <h1>
  <%= form_for @product,  url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :price%>
    <%= f.number_field :price %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :inventory%>
    <%= f.number_field :inventory %><br>

    <%= f.submit "Create" %>
  <% end %>
